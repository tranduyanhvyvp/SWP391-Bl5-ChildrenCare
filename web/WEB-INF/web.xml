<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogList</servlet-name>
        <servlet-class>controller.blogList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewBlog</servlet-name>
        <servlet-class>controller.viewBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageCustomer</servlet-name>
        <servlet-class>controller.manageCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCustomer</servlet-name>
        <servlet-class>controller.addCustomer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogList</servlet-name>
        <url-pattern>/blogList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewBlog</servlet-name>
        <url-pattern>/viewBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageCustomer</servlet-name>
        <url-pattern>/manageCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCustomer</servlet-name>
        <url-pattern>/addCustomer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
